---
import '../styles/global.css';
import DarkModeScript from '../components/DarkModeScript.astro';

interface Props {
  title?: string;
}

const { title = "Authentication - Cool Budget Tech & Music Store" } = Astro.props;
---

<html lang="en" class="h-full bg-gray-50 dark:bg-gray-900">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="Astro v4.10.2" />
    <title>{title}</title>
    <meta name="description" content="Sign in to your Cool Budget Tech & Music Store account" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://coolbudgettech.com/auth" />
    <meta property="og:title" content="Sign In - Cool Budget Tech & Music Store" />
    <meta property="og:description" content="Access your account to manage orders and preferences" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content="https://coolbudgettech.com/auth" />
    <meta property="twitter:title" content="Sign In - Cool Budget Tech & Music Store" />
    <meta property="twitter:description" content="Access your account to manage orders and preferences" />
    
    <!-- Dark mode script - must be loaded before any content renders -->
    <DarkModeScript />
  </head>
  
  <body class="h-full bg-gray-50 dark:bg-gray-900">
    <div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
      <!-- Simple branding header -->
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center">
          <a href="/" class="flex items-center">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-600 text-white">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h1 class="ml-3 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">CoolBudgetTech</h1>
          </a>
        </div>
      </div>

      <!-- Main content area -->
      <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
        <slot />
      </div>

      <!-- Footer with back to store link -->
      <div class="mt-8 text-center">
        <a href="/" class="text-sm text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
          ‚Üê Back to Store
        </a>
      </div>
    </div>
  </body>
</html>

<script>
  import { initializeStores } from '../lib/stores.js';

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize stores for dark mode support
    initializeStores();
  });
</script>