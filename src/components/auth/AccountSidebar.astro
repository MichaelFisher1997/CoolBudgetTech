---
interface Props {
  currentPage: 'profile' | 'orders' | 'settings' | 'addresses';
}

const { currentPage } = Astro.props;

const navItems = [
  {
    id: 'profile',
    href: '/account',
    label: 'Profile',
    icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'
  },
  {
    id: 'orders',
    href: '/account/orders',
    label: 'Orders',
    icon: 'M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z'
  },
  {
    id: 'settings',
    href: '/account/profile',
    label: 'Settings',
    icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065zM15 12a3 3 0 11-6 0 3 3 0 016 0z'
  },
  {
    id: 'addresses',
    href: '/account/addresses',
    label: 'Addresses',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z'
  }
];
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
  <nav class="space-y-1">
    {navItems.map((item) => {
      const isActive = currentPage === item.id;
      const linkClass = isActive
        ? "bg-indigo-50 border-indigo-500 text-indigo-700 dark:bg-indigo-900 dark:border-indigo-400 dark:text-indigo-200 group border-l-4 px-4 py-3 flex items-center text-sm font-medium rounded-r-md"
        : "border-transparent text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white group border-l-4 px-4 py-3 flex items-center text-sm font-medium rounded-r-md transition-colors";
      const iconClass = isActive
        ? "text-indigo-500 dark:text-indigo-400 mr-3 h-5 w-5"
        : "text-gray-400 group-hover:text-gray-500 mr-3 h-5 w-5";
      
      return (
        <a href={item.href} class={linkClass}>
          <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
          </svg>
          {item.label}
        </a>
      );
    })}
  </nav>
</div>