<script>
  // Newsletter subscription functionality
  document.addEventListener('DOMContentLoaded', () => {
    const newsletterInputs = document.querySelectorAll('footer input[type="email"]');
    const newsletterButtons = document.querySelectorAll('footer button');
    
    newsletterButtons.forEach((button, index) => {
      if (button.textContent.includes('Subscribe')) {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          const input = newsletterInputs[index];
          const email = input?.value.trim();
          
          if (email) {
            // In a real implementation, this would submit to your backend
            alert(`Thank you for subscribing with ${email}! You'll receive our latest deals and updates.`);
            if (input) input.value = '';
          } else {
            alert('Please enter a valid email address.');
          }
        });
      }
    });
    
    // Handle Enter key in newsletter input
    newsletterInputs.forEach((input, index) => {
      input.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          const button = newsletterButtons[index];
          if (button) button.click();
        }
      });
    });
  });
</script>
