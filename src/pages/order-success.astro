---
import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout title="Order Success - CoolBudgetTech" showSidebar={false}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center px-4 pt-32">
    <div class="max-w-md w-full">
      <!-- Success Card -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 text-center">
        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 dark:bg-green-900 mb-6">
          <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <!-- Success Message -->
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
          Order Successful!
        </h1>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          Thank you for your purchase. Your order has been confirmed and is being processed.
        </p>

        <!-- Test Mode Notice -->
        <div class="mb-6 bg-yellow-50 dark:bg-yellow-900 border border-yellow-200 dark:border-yellow-700 rounded-lg p-3">
          <div class="flex items-center justify-center">
            <svg class="h-4 w-4 text-yellow-600 dark:text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <span class="text-yellow-800 dark:text-yellow-200 text-sm font-medium">
              Test Order - No payment was processed
            </span>
          </div>
        </div>

        <!-- Order Details -->
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-6">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">What happens next?</h3>
          <div class="text-left space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <div class="flex items-center">
              <svg class="h-4 w-4 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Order confirmation email sent
            </div>
            <div class="flex items-center">
              <svg class="h-4 w-4 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              Processing within 24 hours
            </div>
            <div class="flex items-center">
              <svg class="h-4 w-4 mr-2 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
              </svg>
              Tracking information provided
            </div>
            <div class="flex items-center">
              <svg class="h-4 w-4 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2L3 7v11a1 1 0 001 1h3a1 1 0 001-1v-5h4v5a1 1 0 001 1h3a1 1 0 001-1V7l-7-5z" clip-rule="evenodd" />
              </svg>
              Delivery within 3-5 business days
            </div>
          </div>
        </div>

        <!-- Order Number Display -->
        <div id="order-details" class="mb-6 p-4 bg-blue-50 dark:bg-blue-900 rounded-lg">
          <p class="text-sm text-blue-800 dark:text-blue-200">
            <span class="font-medium">Order Number:</span> 
            <span id="order-number" class="font-mono">#TEST-ORDER-{new Date().getTime()}</span>
          </p>
          <p class="text-xs text-blue-700 dark:text-blue-300 mt-1">
            Save this number for your records
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <a 
            href="/account/orders" 
            class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            View Order History
          </a>
          
          <a 
            href="/products" 
            class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600"
          >
            Continue Shopping
          </a>
        </div>

        <!-- Support -->
        <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-600">
          <p class="text-xs text-gray-500 dark:text-gray-400">
            Need help? 
            <a href="/contact" class="text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 font-medium">
              Contact our support team
            </a>
          </p>
        </div>
      </div>

      <!-- Newsletter Signup -->
      <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6 text-center">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
          Stay in the loop!
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
          Get notified about new products and exclusive deals
        </p>
        <form class="flex space-x-2">
          <input 
            type="email" 
            placeholder="Enter your email"
            class="flex-1 min-w-0 rounded-md border-gray-300 py-2 px-3 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
            required
          >
          <button 
            type="submit"
            class="px-4 py-2 bg-indigo-600 text-white rounded-md text-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>
</DefaultLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Get order token from URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const orderToken = urlParams.get('order');
    
    if (orderToken) {
      // Update order number display
      const orderNumberElement = document.getElementById('order-number');
      if (orderNumberElement) {
        orderNumberElement.textContent = `#${orderToken.substring(0, 12).toUpperCase()}`;
      }
    }
    
    // Handle newsletter signup
    const newsletterForm = document.querySelector('form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = e.target.querySelector('input[type="email"]').value;
        
        // Simple notification
        const notification = document.createElement('div');
        notification.className = 'fixed top-4 right-4 z-50 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded max-w-md';
        notification.innerHTML = `
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm">Thanks for subscribing!</span>
          </div>
        `;
        
        document.body.appendChild(notification);
        e.target.reset();
        
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 3000);
      });
    }
    
    // Track order completion for analytics (placeholder)
    if (window.gtag) {
      window.gtag('event', 'purchase', {
        'transaction_id': orderToken || 'test-order',
        'value': 0, // Would be actual order value in production
        'currency': 'GBP'
      });
    }
    
    // Snipcart integration for order details
    document.addEventListener('snipcart.ready', () => {
      // If we have Snipcart available, we could get more order details
      console.log('Order success page loaded with Snipcart');
    });
  });
</script>