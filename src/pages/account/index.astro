---
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import AuthProvider from '../../components/auth/AuthProvider';
import ProfileForm from '../../components/auth/ProfileForm';
import AccountSidebar from '../../components/auth/AccountSidebar.astro';
---

<DefaultLayout title="My Account - Cool Budget Tech & Music Store" showSidebar={false}>
  <!-- Breadcrumb -->
  <nav class="flex mb-8" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-4">
      <li>
        <div>
          <a href="/" class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
          </a>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-900 dark:text-white">My Account</span>
        </div>
      </li>
    </ol>
  </nav>

  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">My Account</h1>
        <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">
          Manage your account settings and view your orders
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 pb-16">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
          <AccountSidebar currentPage="profile" />
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
            <AuthProvider client:load>
              <ProfileForm client:load />
            </AuthProvider>
          </div>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>

<script>
  // Redirect if not logged in
  import { userAtom, loadingAtom, initializeAuth } from '../../lib/auth-store';
  
  document.addEventListener('DOMContentLoaded', () => {
    console.log('Account page: Initializing auth');
    initializeAuth();
    
    // Check auth status periodically until auth is loaded
    const checkAuth = () => {
      const loading = loadingAtom.get();
      const user = userAtom.get();
      
      console.log('Account page: Auth check - loading:', loading, 'user:', !!user);
      
      if (!loading && !user) {
        console.log('Account page: No user found, redirecting to login');
        window.location.href = '/auth/login';
      } else if (!loading && user) {
        console.log('Account page: User authenticated:', user.email);
      } else if (loading) {
        console.log('Account page: Still loading auth...');
        setTimeout(checkAuth, 100);
      }
    };
    
    setTimeout(checkAuth, 100);
  });
</script>