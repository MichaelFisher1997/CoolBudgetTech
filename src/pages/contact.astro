---
import DefaultLayout from '../layouts/DefaultLayout.astro';
---

<DefaultLayout title="Contact Us - CoolBudgetTech" showSidebar={false}>
  <div class="bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-7xl px-6 py-16 lg:px-8">
      <div class="mx-auto max-w-lg text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Contact Us
        </h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          We'd love to hear from you. Send us a message and we'll respond as soon as possible.
        </p>
      </div>

      <div class="mx-auto mt-16 grid max-w-4xl grid-cols-1 gap-8 lg:grid-cols-2">
        <!-- Contact Information -->
        <div class="rounded-2xl bg-gray-50 dark:bg-gray-800 p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Get in Touch</h2>
          <p class="mt-4 text-gray-600 dark:text-gray-300">
            Have a question about a product, need help with an order, or just want to say hello? We're here to help.
          </p>

          <div class="mt-8 space-y-6">
            <div class="flex items-start">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-medium text-gray-900 dark:text-white">Email</h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
                  <a href="mailto:support@coolbudgettech.com" class="hover:text-indigo-600 dark:hover:text-indigo-400">
                    support@coolbudgettech.com
                  </a>
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-medium text-gray-900 dark:text-white">Response Time</h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
                  We typically respond within 24 hours
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-base font-medium text-gray-900 dark:text-white">Support Hours</h3>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
                  Monday - Friday: 9:00 AM - 6:00 PM GMT<br>
                  Saturday: 10:00 AM - 4:00 PM GMT
                </p>
              </div>
            </div>
          </div>

          <!-- FAQ Link -->
          <div class="mt-8 rounded-lg bg-white dark:bg-gray-700 p-4">
            <h3 class="text-base font-medium text-gray-900 dark:text-white">Need Quick Answers?</h3>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-300">
              Check our FAQ section for common questions about shipping, returns, and more.
            </p>
            <a href="/faq" class="mt-2 inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300">
              Visit FAQ
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <form class="rounded-2xl bg-white dark:bg-gray-800 p-8 shadow-sm ring-1 ring-gray-900/5 dark:ring-gray-100/5">
          <div class="grid grid-cols-1 gap-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Name *
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Email *
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>

            <div>
              <label for="order-number" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Order Number (if applicable)
              </label>
              <input
                type="text"
                name="order-number"
                id="order-number"
                class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Subject *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              >
                <option value="">Select a subject...</option>
                <option value="product-inquiry">Product Inquiry</option>
                <option value="order-status">Order Status</option>
                <option value="shipping">Shipping Question</option>
                <option value="return">Return/Exchange</option>
                <option value="technical-support">Technical Support</option>
                <option value="billing">Billing Question</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Message *
              </label>
              <textarea
                name="message"
                id="message"
                rows="4"
                required
                class="mt-1 block w-full rounded-md border-gray-300 py-2 px-3 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
                placeholder="Please provide as much detail as possible..."
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              >
                Send Message
              </button>
            </div>
          </div>
        </form>
      </div>

      <!-- Additional Contact Methods -->
      <div class="mx-auto mt-16 max-w-4xl">
        <div class="rounded-2xl bg-gray-50 dark:bg-gray-800 p-8">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white text-center">
            Other Ways to Reach Us
          </h2>
          <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="text-center">
              <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </div>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Twitter</h3>
              <p class="text-sm text-gray-600 dark:text-gray-300">@CoolBudgetTech</p>
            </div>
            <div class="text-center">
              <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
                </svg>
              </div>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Facebook</h3>
              <p class="text-sm text-gray-600 dark:text-gray-300">CoolBudgetTech</p>
            </div>
            <div class="text-center">
              <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-600">
                <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.219-5.160 1.219-5.160s-.219-.438-.219-1.085c0-1.016.590-1.774 1.324-1.774.624 0 .926.468.926 1.029 0 .627-.399 1.562-.606 2.430-.172.731.367 1.325 1.091 1.325 1.310 0 2.177-1.625 2.177-3.569 0-1.493-1.007-2.618-2.753-2.618-1.986 0-3.218 1.421-3.218 3.020 0 .551.183.937.463 1.226.133.156.151.219.103.398-.035.131-.117.458-.151.585-.046.172-.188.210-.320.154-.892-.365-1.31-1.291-1.31-2.362 0-1.943 1.635-4.119 4.848-4.119 2.598 0 4.307 1.794 4.307 3.714 0 2.552-1.415 4.440-3.491 4.440-.699 0-1.357-.373-1.581-.820 0 0-.383 1.556-.456 1.838-.221.855-.568 1.718-.992 2.399A11.99 11.99 0 0 0 12.017 24c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/>
                </svg>
              </div>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Instagram</h3>
              <p class="text-sm text-gray-600 dark:text-gray-300">@coolbudgettech</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Here you would typically send to your backend
        console.log('Contact form submitted:', data);
        
        // Show success message
        alert('Thank you for your message! We\'ll get back to you within 24 hours.');
        form.reset();
      });
    }
  });
</script>